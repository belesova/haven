# Paths
set FL_DRIVER_PATH            "/testbench/uut"
set TB_BASE                   "/testbench"

source      "signals.fdo"

exec make
view wave
delete wave *

add wave -noupdate -label reset $TB_BASE/reset
add wave -noupdate -label base_clk $TB_BASE/clk

blk_FL_DRIVER "$TB_BASE" "$FL_DRIVER_PATH"

restart -f
run 10 us
